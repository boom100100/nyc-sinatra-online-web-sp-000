<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks">
  <input type="hidden" id="hidden" name="_method" action="PATCH">
  <input type="text" id="landmark_name" name="landmark[name]" value="<%= @landmark.name %>">
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed %>">

  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
